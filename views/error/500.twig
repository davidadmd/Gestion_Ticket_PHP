{% extends "layout/base.twig" %}

{% block title %}Erreur serveur - {{ parent() }}{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="display-1 text-danger mb-4">500</h1>
                    <h2 class="mb-4">Erreur serveur</h2>
                    <p class="lead mb-4">{{ message|default('Une erreur inattendue s\'est produite. Veuillez réessayer plus tard.') }}</p>
                    <a href="{{ path('/') }}" class="btn btn-primary">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
