{% extends "layout/base.twig" %}

{% block title %}Accueil - {{ parent() }}{% endblock %}

{% block content %}
<div class="jumbotron text-center mb-4">
    <h1 class="display-4">Bienvenue sur la Gestion des Tickets</h1>
    <p class="lead">Un système simple et efficace pour gérer vos tickets de support</p>
    {% if not session.user_id %}
        <div class="mt-4">
            <a href="/gestion_ticket_php/login" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Se connecter
            </a>
        </div>
    {% endif %}
</div>

{% if session.user_id %}
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-ticket-alt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Mes Tickets</h5>
                    <p class="card-text">Consultez et gérez vos tickets existants</p>
                    <a href="/gestion_ticket_php/tickets" class="btn btn-primary">
                        <i class="fas fa-list-alt me-2"></i>Voir mes tickets
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-plus-circle fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Nouveau Ticket</h5>
                    <p class="card-text">Créez un nouveau ticket de support</p>
                    <a href="/gestion_ticket_php/tickets/create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Créer un ticket
                    </a>
                </div>
            </div>
        </div>
        {% if is_granted('admin') %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                        <h5 class="card-title">Administration</h5>
                        <p class="card-text">Gérez les utilisateurs et les tickets</p>
                        <a href="/Gestion_Ticket_PHP/admin" class="btn btn-outline-danger">
                            <i class="fas fa-cog me-2"></i>Administration
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endif %}
{% endblock %}
