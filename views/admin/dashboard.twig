{% extends "layout/base.twig" %}

{% block title %}Administration - {{ parent() }}{% endblock %}

{% block content %}
<div class="container py-4">
    <h1 class="mb-4">Tableau de bord administrateur</h1>

    {% include 'layout/alerts.twig' %}

    <div class="row">
        <!-- Carte Gestion des Utilisateurs -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-users me-2"></i>Gestion des Utilisateurs
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Gérez les utilisateurs du système, leurs rôles et leurs permissions.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check me-2"></i>Ajouter de nouveaux utilisateurs</li>
                        <li><i class="fas fa-check me-2"></i>Modifier les rôles</li>
                        <li><i class="fas fa-check me-2"></i>Gérer les accès</li>
                    </ul>
                    <a href="/admin/users" class="btn btn-primary">
                        <i class="fas fa-users me-2"></i>Gérer les utilisateurs
                    </a>
                </div>
            </div>
        </div>

        <!-- Carte Gestion des Tickets -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-ticket-alt me-2"></i>Gestion des Tickets
                    </h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Supervisez tous les tickets du système et leur traitement.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check me-2"></i>Vue d'ensemble des tickets</li>
                        <li><i class="fas fa-check me-2"></i>Assignation des tickets</li>
                        <li><i class="fas fa-check me-2"></i>Suivi des résolutions</li>
                    </ul>
                    <a href="/admin/tickets" class="btn btn-success">
                        <i class="fas fa-ticket-alt me-2"></i>Gérer les tickets
                    </a>
                </div>
            </div>
        </div>




    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation des cartes au chargement
    const cards = document.querySelectorAll('.card');
    cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
            card.style.transition = 'all 0.3s ease-out';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
});
</script>
{% endblock %}
