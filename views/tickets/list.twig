{% extends "layout/base.twig" %}

{% block title %}Liste des tickets{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-ticket-alt me-2"></i>Liste des tickets
            </h2>
            <a href="/gestion_ticket_php/tickets/create" class="btn btn-light">
                <i class="fas fa-plus-circle me-2"></i>Nouveau ticket
            </a>
        </div>
        <div class="card-body">

    {% if tickets is empty %}
        <div class="alert alert-info">
            Aucun ticket n'a été créé pour le moment.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Créé par</th>
                        <th>Assigné à</th>
                        <th>Priorité</th>
                        <th>Statut</th>
                        <th>Date de création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in tickets %}
                        <tr>
                            <td>
                                <a href="/gestion_ticket_php/tickets/view/{{ ticket.id }}" class="text-decoration-none">{{ ticket.title }}</a>
                            </td>
                            <td>{{ ticket.username }}</td>
                            <td>
                                {% if ticket.assigned_username %}
                                    <span class="badge bg-info">{{ ticket.assigned_username }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">Non assigné</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge {{ priority_classes[ticket.priority ?? 'null'] }}">
                                    {{ priority_labels[ticket.priority ?? 'null'] }}
                                </span>
                            </td>
                            <td>
                                <span class="badge {{ status_classes[ticket.status ?? 'null'] }}">
                                    {{ status_labels[ticket.status ?? 'null'] }}
                                </span>
                            </td>
                            <td>{{ ticket.created_at }}</td>
                            <td>
                                <div class="btn-group">
                                    {% if session.role != '0' or ticket.user_id == session.user_id %}
                                        <a href="/gestion_ticket_php/tickets/edit/{{ ticket.id }}" class="btn btn-sm btn-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    {% endif %}
                                    <a href="/gestion_ticket_php/tickets/view/{{ ticket.id }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
        </div>
    </div>
</div>
{% endblock %}
